<% layout('layouts/boilerplate') %>
<h1 class="text-center">New Campground</h1>
<div class="col-6 offset-3">
<form action="/campgrounds" method="POST">
      <div class="form-group my-2">
            <label for="title">Title</label>
            <input class="form-control" id="title" name="campground[title]">
      </div>

      <div class="form-group my-2">
            <label for="location">Location</label>
            <input class="form-control" id="location" name="campground[location]">
      </div>

      <label class="sr-only" for="inlineFormInputGroup">Price</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="0.0" name="campground[price]">
      </div>

      <div class="form-group my-2">
            <label for="image">Image URL</label>
            <input class="form-control" id="image" name="campground[image]">
      </div>

      <div class="form-group my-2">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="campground[description]" rows="3"></textarea>
      </div>

      <button class="btn btn-success mt-2">Submit</button>
</form>
<a class="btn btn-dark  mt-1" href="/campgrounds">Back</a>
</div>
