<% layout('layouts/boilerplate') %>
<h1>
      All Campgrounds
</h1>

<ul>
      <%for(let camp of campground){%>
            <div class="card mb-3">
                  <div class="row">
                        <div class="col-md-4">
                              <img class="img-fluid" src="<%=camp.image%>" style="height:300px; width:500px; object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                              <div class="card-body">
                                    <h5 class="card-title"><%=camp.title%></h5>
                                    <p class="card-text"><%=camp.description%></p>
                                    <p class="class-text">
                                          <small class="text-muted"><%=camp.location%></small>
                                    </p>
                                    <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">More about <%=camp.title%></a>
                              </div>
                        </div>
                  </div>
            </div>
      <%}%>
</ul>